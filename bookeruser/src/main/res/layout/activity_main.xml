<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00ff00"
    >

    <TextView
        android:clickable="true"
        android:onClick="start"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始体验"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/tv_start"
        android:layout_below="@+id/bt_have"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp" />

    <Button
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#426f42"
        android:textColor="#ffffff"
        android:text="登录"
        android:id="@+id/bt_loding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="140dp" />

    <Button
        android:textSize="30dp"
        android:background="#426f42"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/bt_have"
        android:layout_alignBottom="@+id/bt_loding"
        android:layout_alignRight="@+id/tv_start"
        android:layout_alignEnd="@+id/tv_start" />
</RelativeLayout>
